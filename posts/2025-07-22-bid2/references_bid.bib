
@inproceedings{ochsner2025,
	title = {Bibliotheken als betreibende und bewahrende Institutionen für wissenschaftliche Blogs},
	rights = {https://creativecommons.org/licenses/by/4.0/deed.de},
	url = {https://opus4.kobv.de/opus4-bib-info/frontdoor/index/index/docId/19469},
	abstract = {Wissenschaftliche Blogs haben sich als Plattformen etabliert, um Forschungsergebnisse und Diskussionen aus der Forschung einer Fachcommunity sowie der Öffentlichkeit zugänglich zu machen. Auch bibliothekarische Blogs beteiligen sich an dieser Form der Wissenschaftskommunikation, informieren über bibliothekarische Arbeit und reflektieren deren Weiterentwicklung.
Mit dem Wandel der Social-Media-Landschaft beginnt auch eine Reflexion über die Rolle von nicht-kommerziellen Infrastrukturen wie Blogs oder das Fediverse. Wissenschaftliche Blogs können als Beitrag in der Landschaft des wissenschaftsgeleiteten Open-Access-Publizierens verstanden werden.
Ein ungeklärter Aspekt beim Betrieb von Blogs außerhalb von Infrastrukturen wie de.hypotheses ist deren dauerhafte Zugänglichkeit. Durch Kommentare und dynamische Inhalte ergeben sich Herausforderungen bei der langfristigen Sicherung von Blogposts, die in Zeitschriftenartikeln oder auch in Gerichtsurteilen (z. B. Verfassungsblog) zitiert werden und somit Teil des kulturellen Gedächtnisses sind. Die Hackerangriffe auf das Internet Archive im Herbst 2024 haben die Fragilität bei der Sicherung von Online-Inhalten allgemein deutlich gemacht.
Das Hands-on-Lab diskutiert unter der Organisation und Moderation von Expert:innen der wissenschaftlichen Bloglandschaft die Rolle der Bibliotheken bei der Erschließung, Verbreitung und Sicherung wissenschaftlicher Blogs. Dabei wird die World-Café-Methode genutzt. In Gesprächsrunden sollen Aspekte von Technik, Organisation und Rahmenbedingungen der Sicherung von Blogs diskutiert werden. 
Die Ergebnisse werden von dem {DFG}-Projekt „Infra Wiss Blogs – Kooperative Informationsinfrastruktur für wissenschaftliche Blogs“ dokumentiert und publiziert.
Das Hands-on-Lab will einen wirkungsvollen Beitrag dazu leisten, wie Bibliotheken durch den Betrieb, die Erschließung und die Sicherung wissenschaftlicher Blogs ihre Rolle im digitalen Wandel der Wissenschaftskommunikation aktiv mitgestalten können.},
	eventtitle = {113. {BiblioCon} in Bremen 2025; 9. Bibliothekskongress, Bremen.},
	author = {Ochsner, Catharina and Di Rosa, Elena and Fenner, Martin and Ködel, Sven and Pampel, Heinz and Woldering, Britta and Stadtbäumer, Till and Voigt, Charmaine and Höfting, Jonas},
